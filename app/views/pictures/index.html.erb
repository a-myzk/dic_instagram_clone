<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Picstagram</h1>
</div>

<button class="btn btn-default"><%= link_to 'New Picture', new_picture_path %></button>


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <div>
        <tr>
          <td><%= image_tag picture.image.url %></td>
          <td><%= picture.content %></td>
          <td><button class="btn btn-default visible-lg-inline visible-md-inline visible-sm-block visible-xs-block"><%= link_to 'Show', picture %></button></td>
          <%# if picture.user_id == current_user.id %>
            <td><button class="btn btn-default visible-lg-inline visible-md-inline visible-sm-block visible-xs-block"><%= link_to 'Edit', edit_picture_path(picture) %></button></td>
            <td><button class="btn btn-default visible-lg-inline visible-md-inline visible-sm-block visible-xs-block"><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          <%# end %>
        </tr>
      </div>
    <% end %>
    
  </tbody>

</table>
